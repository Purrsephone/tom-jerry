<launch>
  <!-- No namespace here as we will share this description. 
       Access with slash at the beginning -->

  <param name="robot_description_1" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_waffle.urdf.xacro" />
  <param name="robot_description_2" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_burger.urdf.xacro" />

  <!-- BEGIN ROBOT 1-->
  <group ns="tom">
    <param name="tf_prefix" value="tom_tf" />
    <include file="$(find tom_and_jerry_project)/launch/robot1.launch" >
      <arg name="init_pose" value="-x 0 -y 0 -z 0" />
      <arg name="robot_name"  value="tom" />
    </include>
  </group>

  <!-- BEGIN ROBOT 2-->
  <group ns="jerry">
    <param name="tf_prefix" value="jerry_tf" />
    <include file="$(find tom_and_jerry_project)/launch/robot2.launch" >
      <arg name="init_pose" value="-x 1 -y 1 -z 0" />
      <arg name="robot_name"  value="jerry" />
    </include>
  </group>
</launch>